generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Auto {
  id String @id @default(uuid())
  patente String @unique
  modelo String
  marca String
  a√±o Int
  precio Decimal
  fechaBaja DateTime?
  fotos Foto[]
  estado EstadoAuto @default(Disponible)
}

model Foto {
  id String @id @default(uuid())
  url String
  autoId String
  auto Auto @relation(fields: [autoId], references:[id])
}

enum EstadoAuto {
  Disponible
  Reservado
  Vendido
}